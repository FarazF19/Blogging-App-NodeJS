<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>Blogs</title>
</head>

<body>
    <%- include("./partials/nav") %>

    <div class="container mt-3">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageUrl %>" alt="blogImg" width="400px">
        <pre class="mt-4"><%= blog.body %></pre>
    </div>

    <div class="container mt-3">
      <img src="<%= blog.createdBy.profileImageUrl %>" width="50px"> <%=  blog.createdBy.fullName %>
    </div>
    
    <div class="container mt-3">
        <h1>Comments</h1>
        <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mb-3">
                <input type="text" name="content" class="form-control" placeholder="Enter your Comment here! ">
                <button class="btn btn-sm btn-primary mt-2" type="submit">Add</button>
            </div>
        </form>
        <% } %>   
    </div>
    
    <div class="container mt-3">
        <% comments.forEach(comment => { %>
         <div>
            <img src="<%= comment.createdBy.profileImageUrl %>" width="50px"><%= comment.createdBy.fullName %>
        <pre><%= comment.content %></pre> 
         </div>
        <% }) %>
    </div>

    <%- include("./partials/scripts") %>
</body>
</html>